<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN"
    "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="deviceAction" namespace="/modules/device"
		extends="ivms">
		<action name="*" method="{1}" class="deviceAction">
			<interceptor-ref name="fileUpload">
				<param name="maximumSizeMap">devFile:2097152;</param>
				<param name="allowedExtensionsMap">devFile:xls,xlsx;</param>
			</interceptor-ref>
			<interceptor-ref name="ivms" />
			<result name="upload" type="json">
				<param name="contentType">text/html</param>
				<param name="includeProperties">resMap.*,actionErrors.*,fieldErrors.*,rdata.*,success,msg,ErrorMsg,ErrorCode</param>
				<param name="excludeNullProperties">true</param>
				<param name="ignoreHierarchy">false</param>
			</result>
		</action>
	</package>
</struts>