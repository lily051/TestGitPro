<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
	<display-name>HIK FINANCE FMS</display-name>
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>fms.root</param-value>
	</context-param>
	<context-param>
		<param-name>log4jConfigLocation</param-name>
		<param-value>classpath:log4j.properties</param-value>
	</context-param>
	<context-param>
		<param-name>log4jRefreshInterval</param-name>
		<param-value>60000</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.util.Log4jConfigListener</listener-class>
	</listener>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:applicationContext.xml
		</param-value>
	</context-param>
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<listener>
		<listener-class>com.hikvision.finance.fms.common.init.AppInitContextListener</listener-class>
	</listener>    
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>UTF-8</param-value>
		</init-param>
		<init-param>
			<param-name>forceEncoding</param-name>
			<param-value>true</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
    
    <filter>
    	<filter-name>frontEndFilter</filter-name>
    	<filter-class>com.hikvision.finance.fms.common.interceptor.FrontEndFilter</filter-class>
 	 </filter>
  	<filter-mapping>
    	<filter-name>frontEndFilter</filter-name>
    	<url-pattern>*.js</url-pattern>
  	</filter-mapping>
  	<filter-mapping>
    	<filter-name>frontEndFilter</filter-name>
    	<url-pattern>*.html</url-pattern>
  	</filter-mapping>
    
	<filter>
    	<filter-name>sessionFilter</filter-name>
    	<filter-class>com.hikvision.finance.fms.common.interceptor.FmsServletFilter</filter-class>
 	 </filter>
  	<filter-mapping>
    	<filter-name>sessionFilter</filter-name>
    	<url-pattern>*.jsp</url-pattern>
  	</filter-mapping>
  	<filter-mapping>
    	<filter-name>sessionFilter</filter-name>
    	<url-pattern>*.action</url-pattern>
  	</filter-mapping>
  	
	<filter>
		<filter-name>struts2</filter-name>
		<filter-class>com.hikvision.finance.fwork.www.struts.filter.UmccStrutsPrepareAndExecuteFilter</filter-class>
		<init-param>
			<param-name>packages</param-name>
			<param-value>com.hikvision.baseui.static,com.hikvision.finance.extend.static</param-value>
		</init-param>
	</filter>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.action</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>*.jsp</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/baseui/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>struts2</filter-name>
		<url-pattern>/financeui/*</url-pattern>
	</filter-mapping>
	<mime-mapping>
		<extension>inc</extension>
		<mime-type>text/plain</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>xml</extension>
		<mime-type>text/xml</mime-type>
	</mime-mapping>
	<mime-mapping>
		<extension>rar</extension>
		<mime-type>application/octet-stream</mime-type>
	</mime-mapping>
	<error-page>
		<error-code>404</error-code>
		<location>/web/errors/404.html</location>
	</error-page>
	<error-page>
		<error-code>413</error-code>
		<location>/web/errors/413.html</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/web/errors/500.html</location>
	</error-page>
	<error-page>
		<error-code>502</error-code>
		<location>/web/errors/502.html</location>
	</error-page>
	<error-page>
		<error-code>504</error-code>
		<location>/web/errors/504.html</location>
	</error-page>
	<error-page>
		<error-code>505</error-code>
		<location>/web/errors/505.html</location>
	</error-page>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/fileupload/*</url-pattern>
    </servlet-mapping>
