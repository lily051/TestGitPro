log4j.appender.PlaybackSimpleDLL=org.apache.log4j.RollingFileAppender
log4j.appender.PlaybackSimpleDLL.File=./log/PlaybackSimpleDLL.log
log4j.appender.PlaybackSimpleDLL.MaxFileSize=25MB
log4j.appender.PlaybackSimpleDLL.MaxBackupIndex=4
log4j.appender.PlaybackSimpleDLL.Append=true
log4j.appender.PlaybackSimpleDLL.Threshold=TRACE
log4j.appender.PlaybackSimpleDLL.layout=org.apache.log4j.PatternLayout
log4j.appender.PlaybackSimpleDLL.layout.ConversionPattern=%d %-5p [%t] - %m%n
#clientLogError的配置
log4j.appender.PlaybackSimpleDLLError=org.apache.log4j.RollingFileAppender
log4j.appender.PlaybackSimpleDLLError.File=./log/PlaybackSimpleDLLError.log
