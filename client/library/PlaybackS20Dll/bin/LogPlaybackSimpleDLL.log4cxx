log4j.appender.PlaybackSimpleDLLError.MaxBackupIndex=4
log4j.appender.PlaybackSimpleDLLError.Append=true
log4j.appender.PlaybackSimpleDLLError.Threshold=ERROR
log4j.appender.PlaybackSimpleDLLError.layout=org.apache.log4j.PatternLayout
log4j.appender.PlaybackSimpleDLLError.layout.ConversionPattern=%d %-5p [%t] - %m%n



